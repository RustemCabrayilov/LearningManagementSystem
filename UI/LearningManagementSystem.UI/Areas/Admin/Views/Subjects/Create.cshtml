@model LearningManagementSystem.Application.Abstractions.Services.Subject.SubjectRequest


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form class="forms-sample" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" type="text" class="form-control" id="Name" placeholder="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AttendanceLimit">Attendance Limit</label>
                    <input asp-for="AttendanceLimit" min="0" type="number" class="form-control" id="AttendanceLimit" placeholder="Attendance Limit">
                    <span asp-validation-for="AttendanceLimit" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SubjectCode">Subject Code</label>
                    <input asp-for="SubjectCode" type="text" class="form-control" id="SubjectCode" placeholder="Subject Code">
                    <span asp-validation-for="SubjectCode" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
                <button class="btn btn-light" asp-action="Index">Cancel</button>
            </form>
        </div>
    </div>
</div>