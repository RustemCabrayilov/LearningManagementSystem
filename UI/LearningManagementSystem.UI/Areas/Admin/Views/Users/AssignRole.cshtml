@model LearningManagementSystem.Application.Abstractions.Services.User.UserRoleDto
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form class="forms-sample" asp-action="AssignRole">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label >Username</label>
                    <input readonly asp-for="UserId" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="RoleName" class="control-label"></label>
                    <select asp-for="RoleName"
                            class="form-control"
                            asp-items="@(new SelectList(Model.Roles,"Name","Name"))">
                        <option>Please select one</option>
                    </select>
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
                <button class="btn btn-light" asp-action="Index">Cancel</button>
            </form>
        </div>
    </div>
</div>