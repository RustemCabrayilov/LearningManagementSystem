@model List<LearningManagementSystem.Application.Abstractions.Services.Attendance.AttendanceResponse>
<a class="btn btn-primary" asp-action="Create">Create</a>
<table class="table table-hover">
    <thead>
    <tr>
        <th>Id</th>
        <th>Lesson</th>
        <th>Absence</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.Id</td>
        <td>@item.Lesson.Name</td>
        <td>@item.Absence</td>
        <td>
        </td>
    </tr>
    }
    </tbody>
</table>