@using LearningManagementSystem.Persistence.Filters
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model LearningManagementSystem.Application.Abstractions.Services.Student.StudentResponse?
<link rel="stylesheet" href="~/css/details.css">

<section class="section about-section gray-bg" id="about">
    <div class="container">
        <div class="row align-items-center flex-row-reverse">
            <div class="col-lg-6">
                <div class="about-text go-to">
                    <h3 class="dark-color">About Student</h3>
                    <div class="row about-list">
                        <div class="col-md-6">
                            <div class="media">
                                <label>Full Name</label>
                                <p>@Model?.Name @Model?.Surname</p>
                            </div>
                            <div class="media">
                                <label>Student No</label>
                                <p>@Model?.StudentNo</p>
                            </div>
                            <div class="media">
                                <label>Student Card Qr</label>
                                <img height="200px" src="@Model?.QrCodeUrl" alt="qr code"/>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="media">
                                <label>UserName</label>
                                <p>@ViewBag.User.UserName</p>
                            </div>
                            <div class="media">
                                <label>E-mail</label>
                                <p>@ViewBag.User.Email</p>
                            </div>
                            <div class="media">
                                <label>Phone</label>
                                <p>@ViewBag.User.PhoneNumber</p>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="about-avatar">
                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" title="" alt="">
                </div>
            </div>
        </div>
        <div class="counter">
            <div class="row">
                <div class="col-6 col-lg-3">
                    <div class="count-data text-center">
                        <h6 class="count h2" data-to="500" data-speed="500">
                            @if (User.IsInRole("Student"))
                            {
                                <a class="nav-link text-light btn-primary rounded" href="@Url.Action("StudentGroups", "Students")">Groups</a>
                            }
                        </h6>
                    </div>
                </div>
                <div class="col-6 col-lg-3">
                    <div class="count-data text-center">
                        <h6 class="count h2" data-to="150" data-speed="150">
                            @if (User.IsInRole("Student"))
                            {
                                <a class="nav-link text-light btn-primary rounded"
                                   href="@Url.Action("Index", "Transcripts", new { studentId = Model.Id })">
                                    Transcripts
                                </a>
                            }
                        </h6>
                    </div>
                </div>
                <div class="col-6 col-lg-3">
                    <div class="count-data text-center">
                        <h6 class="count h2" data-to="850" data-speed="850">
                            @if (User.IsInRole("Student"))
                            {
                                <a class="nav-link text-light  btn-primary rounded" asp-area="" asp-controller="StudentExams" asp-action="Index" asp-route-studentId="@Model.Id">Exam results</a>
                            }
                        </h6>
                    </div>
                </div>
                <div class="col-6 col-lg-3">
                    <div class="count-data text-center">
                        <h6 class="count h2" data-to="190" data-speed="190">
                            @if (User.IsInRole("Student"))
                            {
                                <a class="nav-link text-light  btn-primary rounded"
                                   href="@Url.Action("Index", "Transcripts", new RequestFilter(){FilterField ="StudentId",
                                             FilterGuidValue = Model.Id })">Votes</a>
                            }
                        </h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>