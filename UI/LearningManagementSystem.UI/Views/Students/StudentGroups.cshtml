<table class="table table-hover">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Group Code</th>
        <th>Attendances</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in ViewBag?.Groups)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Code</td>
            <td>
                <a class="btn btn-primary" href="@Url.Action("Index", "Attendances", new { groupId=@item.Id})">
                    Attendances
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>