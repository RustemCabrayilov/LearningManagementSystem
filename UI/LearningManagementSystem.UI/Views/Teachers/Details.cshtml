@using LearningManagementSystem.Persistence.Filters
@model LearningManagementSystem.Application.Abstractions.Services.Teacher.TeacherResponse
<link rel="stylesheet" href="~/css/details.css">
<section class="section about-section gray-bg" id="about">
    <div class="container">
        <div class="row align-items-center flex-row-reverse">
            <div class="col-lg-6">
                <div class="about-text go-to">
                    <h3 class="dark-color">About Teacher</h3>
                    <div class="row about-list">
                        <div class="col-md-6">
                            <div class="media">
                                <label>Full Name</label>
                                <p>@Model.Name @Model.Surname</p>
                            </div>
                            <div class="media">
                                <label>Occupation</label>
                                <p>@Model.Occupation</p>
                            </div>
                            <div class="media">
                                <label>Salary</label>
                                <p>@Model.Salary</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="media">
                                <label>UserName</label>
                                <p>@ViewBag.User.UserName</p>
                            </div>
                            <div class="media">
                                <label>E-mail</label>
                                <p>@ViewBag.User.Email</p>
                            </div>
                            <div class="media">
                                <label>Phone</label>
                                <p>@ViewBag.User.PhoneNumber</p>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="about-avatar">
                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" title="" alt="">
                </div>
            </div>
        </div>
        <div class="counter">
            <div class="row">
                <div class="col-6 col-lg-3">
                    <div class="count-data text-center">
                        <h6 class="count h2" data-to="500" data-speed="500">
                            <a class="nav-link text-light btn-primary rounded" href="@Url.Action("Index", "Groups")">
                                Groups
                            </a>
                        </h6>
                    </div>
                </div>
                <div class="col-6 col-lg-3">
                    <div class="count-data text-center">
                        <h6 class="count h2" data-to="150" data-speed="150">@Model.Rate</h6>
                        <p class="m-0px font-w-600">Rate</p>
                    </div>
                </div>
                <div class="col-6 col-lg-3">
                    <div class="count-data text-center">
                        <h6 class="count h2" data-to="850" data-speed="850">
                            <a class="nav-link text-light btn-primary rounded"
                               href="@Url.Action("TeacherSurveys", "Teachers", new RequestFilter() { FilterGuidValue = @Model.Id ,
                                         FilterField = "TeacherId"})">
                                Surveys
                            </a>
                        </h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>