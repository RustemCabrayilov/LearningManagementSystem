@model LearningManagementSystem.Application.Abstractions.Services.User.UserResponse
<link rel="stylesheet" href="~/css/details.css">
<section class="section about-section gray-bg" id="about">
    <div class="container">
        <div class="row align-items-center flex-row-reverse">
            <div class="col-lg-6">
                <div class="about-text go-to">
                    <h3 class="dark-color">About User</h3>
                    <div class="row about-list">
                        <div class="col-md-6">
                            <div class="media">
                                <label>Username</label>
                                <p>@Model.UserName</p>
                            </div>
                            <div class="media">
                                <label>Email</label>
                                <p>@Model.Email</p>
                            </div>
                            <div class="media">
                                <label>Phone</label>
                                <p>@Model.PhoneNumber</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="about-avatar">
                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" title="" alt="">
                </div>
            </div>
        </div>
    </div>
</section>

